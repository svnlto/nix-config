{
  "icon_theme": "Catppuccin Mocha",
  "theme": "Catppuccin Mocha",
  "experimental.theme_overrides": {
    "players": [
      {
        "cursor": "#ff00f7b0"
      }
    ]
  },
  "active_pane_modifiers": {
    "inactive_opacity": 0.8
  },
  "scrollbar": {
    "show": "system",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_text": true,
    "selected_symbol": true,
    "diagnostics": "all",
    "axes": {
      "horizontal": true,
      "vertical": true
    }
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true,
    "selections_menu": true,
    "agent_review": true,
    "code_actions": false
  },
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "entry_spacing": "comfortable",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": "system"
    },
    "show_diagnostics": "all",
    "indent_guides": {
      "show": "never"
    }
  },
  "cursor_shape": "block",
  "ui_font_size": 12,
  "ui_font_family": "Menlo",
  "buffer_font_size": 12,
  "buffer_font_family": "Hack Nerd Font",
  "tab_size": 2,
  "relative_line_numbers": false,
  "auto_update": false,
  "cursor_blink": true,
  "vim_mode": true,
  "show_whitespaces": "all",
  "preferred_line_length": 80,
  "show_wrap_guides": true,
  "wrap_guides": [80],
  "gutter": {
    "line_numbers": true
  },
  "format_on_save": "language_server",
  "terminal": {
    "font_family": "Hack Nerd Font",
    "dock": "right",
    "default_width": 640,
    "default_height": 320,
    "button": true
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.DS_Store",
    "**/.terraform",
    "**/.cache",
    "**/logs"
  ],
  "languages": {
    "JSON": {
      "format_on_save": "language_server"
    },
    "Terraform": {
      "format_on_save": "language_server"
    },
    "Nix": {
      "format_on_save": "language_server"
    }
  },
  "file_types": {
    "*.tpl": ["Shell Script"],
    "*.ctmpl": ["HCL"],
    "*.nomad": ["HCL"],
    "*.tf": ["Terraform"],
    "*.tfvars": ["Terraform"],
    "*.sh": ["Shell Script"],
    "*.jinja": ["Python"]
  },
  "telemetry": {
    "metrics": false
  },
  "confirm_quit": false,
  "git": {
    "git_gutter": "tracked_files"
  },
  "auto_install_extensions": {
    "html": true,
    "dockerfile": true,
    "docker-compose": true,
    "prisma": true,
    "catppuccin": true,
    "catppuccin-icons": true,
    "git-firefly": true,
    "nix": true,
    "sql": true,
    "markdown-oxide": true,
    "biome": true
  },
  "code_actions_on_format": {
    "source.fixAll.biome": true,
    "source.organizeImports.biome": true
  },
  "lsp": {
    "typescript-language-server": {
      "initialization_options": {
        "preferences": {
          "includeInlayParameterNameHints": "all",
          "includeInlayParameterNameHintsWhenArgumentMatchesName": true,
          "includeInlayFunctionParameterTypeHints": true,
          "includeInlayVariableTypeHints": true,
          "includeInlayPropertyDeclarationTypeHints": true,
          "includeInlayFunctionLikeReturnTypeHints": true,
          "includeInlayEnumMemberValueHints": true
        }
      }
    }
  }
}
