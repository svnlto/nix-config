{
  "icon_theme": "Catppuccin Macchiato",
  "theme": "Catppuccin Macchiato",
  "experimental.theme_overrides": {
    "players": [
      {
        "cursor": "#ff00f7b0"
      }
    ]
  },
  "active_pane_modifiers": {
    "magnification": 1.0,
    "inactive_opacity": 0.8
  },
  "scrollbar": {
    "show": "system",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_text": true,
    "selected_symbol": true,
    "diagnostics": "all",
    "axes": {
      "horizontal": true,
      "vertical": true
    }
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true,
    "selections_menu": true,
    "agent_review": true,
    "code_actions": false
  },
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "entry_spacing": "comfortable",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": null
    },
    "show_diagnostics": "all",
    "indent_guides": {
      "show": "always"
    }
  },
  "agent": {
    "always_allow_tool_actions": true,
    "version": "2",
    "enabled": true,
    "button": true,
    "dock": "right",
    "default_width": 640,
    "default_height": 320,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3.7-sonnet"
    },
    "single_file_review": true
  },
  "cursor_shape": "block",
  "ui_font_size": 13,
  "ui_font_family": "Menlo",
  "buffer_font_size": 13,
  "buffer_font_family": "Menlo",
  "tab_size": 2,
  "relative_line_numbers": false,
  "auto_update": false,
  "cursor_blink": true,
  "vim_mode": true,
  "show_whitespaces": "all",
  "show_indent_guide": true,
  "preferred_line_length": 80,
  "show_wrap_guides": true,
  "wrap_guides": [80],
  "format_on_save": "prettier",
  "format_on_paste": true,
  "terminal_font": "Menlo",
  "terminal_font_size": 12,
  "terminal_line_height": 1.1,
  "terminal_option_as_meta": true,
  "terminal_copy_on_select": true,
  "terminal": {
    "dock": "right",
    "default_width": 640,
    "default_height": 320,
    "button": true
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.DS_Store",
    "**/.terraform",
    "**/.cache",
    "**/logs"
  ],
  "search_exclude_patterns": ["**/.git", "**/.cache", "**/.terraform"],
  "languages": {
    "JSON": {
      "format_on_save": "prettier"
    },
    "Terraform": {
      "format_on_save": "language_server"
    },
    "Nix": {
      "format_on_save": "language_server"
    }
  },
  "file_types": {
    "*.tpl": ["Shell Script"],
    "*.ctmpl": ["HCL"],
    "*.nomad": ["HCL"],
    "*.tf": ["Terraform"],
    "*.tfvars": ["Terraform"],
    "*.sh": ["Shell Script"],
    "*.jinja": ["Python"]
  },
  "telemetry": {
    "metrics": false,
    "crashes": false
  },
  "confirm_quit": false,
  "git": {
    "git_gutter": "tracked_files"
  },
  "auto_install_extensions": {
    "html": true,
    "dockerfile": true,
    "docker-compose": true,
    "prisma": true,
    "catppuccin": true,
    "catppuccin-icons": true,
    "git-firefly": true,
    "make": true,
    "nix": true,
    "sql": true
  }
}